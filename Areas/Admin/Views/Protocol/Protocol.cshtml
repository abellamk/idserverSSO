@model ProtocolViewModel

@{
    ViewBag.Title = "Protocol Configuration : " + Model.DisplayName;
}

@using (Html.BeginForm("UpdateProtocol", "Protocol", new { id = Model.ID }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("Error updating protocol")
    <fieldset class="editor">
        <legend>@ViewBag.Title</legend>

        @Html.EditorFor(x => x.Protocol)

        <div class="buttons">
            <button type="submit">Save Changes</button>
            <button type="reset">Cancel</button>
        </div>
    </fieldset>
}