@model Thinktecture.IdentityServer.Models.Client

@{
    if (Model.ID == 0)
    {
        ViewBag.Title = "New OAuth Client";
    }
    else
    {
        ViewBag.Title = "OAuth Client : " + Model.Name;
    }
}
@{
    var action = Model.Name == null ? "Create" : "Update";
}
@using (Html.BeginForm(action, "OAuthClient"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("Error updating client")
    <fieldset class="editor">
        <legend>@ViewBag.Title</legend>

        @Html.EditorForModel()

        <div class="buttons">
            @if (Model.ID != 0)
            {
                <button type="submit" name="action" value="save">Save Changes</button>
                <button type="submit" name="action" value="delete">Delete</button>
            }
            else
            {
                <button type="submit" name="action" value="create">Create</button>
            }
            <button type="reset">Cancel</button>
        </div>
    </fieldset>
}
